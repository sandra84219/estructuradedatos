	int i;
	if(vacio()==false){
		for(i=frente;i<=final;i++){
			cout<<vc[i] <<" - "<< i << endl;
		}
	}
}
int FMCOLAS::buscar(int n){
	int i;
	int posicion=-1;
	i=frente;
	while(i<=final && posicion==-1){
		if(n==vc[i]){
			posicion=i;
		} 
		i++;
	}
	/*for(i=frente;i<=final;i++){
		if(n==vc[i]){
		 posicion=i;
		}
	}*/
	return (posicion);
}
