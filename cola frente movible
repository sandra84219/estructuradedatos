FRENTEMOVIBLE.cpp

#include "StdAfx.h"
#include "FMCOLA.h"
#include <iostream>
#define MAX 5

using namespace std;

FMCOLAS::FMCOLAS(void)
{
	frente=-1;
	final=-1;
}


FMCOLAS::~FMCOLAS(void)
{
}
void FMCOLAS::push(int dato){
	int i;
	if(final==MAX-1){
		for(i=frente;i<=final;i++){
			vc[i-frente]=vc[i];
		}
		final=final-frente;
		frente=0;
	}
		if(lleno()==false){
			if(vacio()==true){
				frente++; 
			}
			final++;
			vc[final]=dato;
		}else{
			cout<<"COLA LLENA";
		}
}
int FMCOLAS::pop(){
	int dato=-1;
	if(vacio()==false){
		dato=vc[frente];
		frente++;
		if(frente>final){
			frente=-1;
			final=-1;
		}
	}else{
		cout<<"COLA VACIA"<<endl;
	}
	return(dato);
}
bool FMCOLAS::vacio(){
	return(frente==-1 && final==-1);
}
bool FMCOLAS::lleno(){
	return(frente==0 && final==MAX-1);
}
